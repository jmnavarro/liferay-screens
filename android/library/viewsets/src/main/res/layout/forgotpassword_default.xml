<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.auth.forgotpassword.ForgotPasswordDefaultView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:liferay="http://schemas.android.com/apk/res-auto"
    style="@style/default_screenlet">

    <EditText
        android:id="@+id/login"
        android:drawableLeft="@drawable/default_user_icon"
        style="@style/default_edit_text"
        android:hint="@string/screen_name"
        android:text="test@liferay.com" />

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/request_button"
			style="@style/default_submit_button"
			android:text="@string/request_password" />

		<com.liferay.mobile.screens.base.ModalProgressBar
			android:id="@+id/progress_bar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|left"
			android:visibility="invisible"
			liferay:actionViewId="@id/request_button"/>
	</FrameLayout>
</com.liferay.mobile.screens.viewsets.defaultviews.auth.forgotpassword.ForgotPasswordDefaultView>
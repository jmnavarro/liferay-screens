<?xml version="1.0" encoding="utf-8"?>
<com.liferay.mobile.screens.viewsets.defaultviews.auth.login.LoginDefaultView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:liferay="http://schemas.android.com/apk/res-auto"
	style="@style/default_screenlet">

	<EditText
		android:id="@+id/login"
		style="@style/default_edit_text"
		android:drawableLeft="@drawable/default_mail_icon"
		android:hint="@string/email_address"
		android:inputType="text"
		android:text="test@liferay.com"/>

	<EditText
		android:id="@+id/password"
		style="@style/default_edit_text"
		android:drawableLeft="@drawable/default_lock_icon"
		android:hint="@string/password"
		android:inputType="textPassword"
		android:text="test"/>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<Button
			android:id="@+id/login_button"
			style="@style/default_submit_button"
			android:text="@string/sign_in"/>

		<com.liferay.mobile.screens.base.ModalProgressBar
			android:id="@+id/progress_bar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical|left"
			android:visibility="invisible"
			liferay:actionViewId="@id/login_button"/>
	</FrameLayout>
</com.liferay.mobile.screens.viewsets.defaultviews.auth.login.LoginDefaultView>
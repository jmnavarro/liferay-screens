<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:liferay="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:orientation="vertical">

	<TextView
		style="@style/label"
		android:text="@string/ddl_form_label"/>

	<com.liferay.mobile.screens.ddl.form.DDLFormScreenlet
		android:id="@+id/ddl_form_default"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="0dp"
		android:paddingTop="0dp"
		liferay:autoLoad="false"
		liferay:filePrefix="jre"
		liferay:folderId="@integer/folder_id"
		liferay:layoutId="@layout/ddl_form_default"
		liferay:recordSetId="@integer/liferay_recordset_id"
		liferay:repositoryId="@integer/repository_id"
		liferay:structureId="@integer/liferay_structure_id"/>

	<com.liferay.mobile.screens.ddl.form.DDLFormScreenlet
		android:id="@+id/ddl_form_material"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="0dp"
		android:paddingTop="0dp"
		liferay:autoLoad="false"
		liferay:checkboxFieldLayoutId="@layout/ddlfield_checkbox_material"
		liferay:dateFieldLayoutId="@layout/ddlfield_date_material"
		liferay:documentFieldLayoutId="@layout/ddlfield_document_material"
		liferay:filePrefix="jre"
		liferay:folderId="@integer/folder_id"
		liferay:layoutId="@layout/ddl_form_material"
		liferay:recordSetId="@integer/liferay_recordset_id"
		liferay:repositoryId="@integer/repository_id"
		liferay:selectFieldLayoutId="@layout/ddlfield_select_material"
		liferay:structureId="@integer/liferay_structure_id"/>

</LinearLayout>